{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "list-alerts output",
    "$id": "http://schema.nethserver.org/cluster/list-alerts.json",
    "description": "Output schema of the list-alerts action",
    "examples": [],
    "type": "object",
    "required": [
        "alerts"
    ],
    "properties": {
        "filter": {
            "type": "object"
        },
        "alerts": {
            "type": "array",
            "items": {
                "allOf": [
                    {
                        "$ref": "#/$defs/alertmanager-v2-object"
                    },
                    {
                        "$ref": "#/$defs/base-attrs"
                    }
                ]
            }
        }
    },
    "$defs": {
        "alertmanager-v2-object": {
            "type": "object",
            "properties": {
                "labels": {
                    "type": "object"
                },
                "updatedAt": {
                    "type": "string",
                    "format": "date-time"
                },
                "startsAt": {
                    "type": "string",
                    "format": "date-time"
                },
                "endsAt": {
                    "type": "string",
                    "format": "date-time"
                },
                "fingerprint": {
                    "type": "string"
                },
                "status": {
                    "type": "object"
                },
                "generatorURL": {
                    "type": "string"
                },
                "annotations": {
                    "type": "object"
                }
            }
        },
        "base-attrs": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string",
                    "description": "Short alert name"
                }
            },
            "required": [
                "name",
                "category"
            ],
            "oneOf": [
                {
                    "required": [
                        "module_id"
                    ],
                    "properties": {
                        "category": {
                            "const": "application"
                        },
                        "module_id": {
                            "type": "string"
                        }
                    }
                },
                {
                    "required": [
                        "node_id"
                    ],
                    "properties": {
                        "category": {
                            "const": "node"
                        },
                        "node_id": {
                            "type": "integer"
                        }
                    }
                },
                {
                    "properties": {
                        "category": {
                            "const": "backup"
                        }
                    }
                }
            ]
        }
    }
}
