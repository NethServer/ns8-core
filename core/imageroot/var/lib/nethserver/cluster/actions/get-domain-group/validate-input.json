{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "get-domain-group input",
    "description": "Get the details of the given group",
    "$id": "http://schema.nethserver.org/cluster/get-domain-group-input.json",
    "examples": [
        {
            "domain": "dom.test",
            "group": "domain admins"
        }
    ],
    "type": "object",
    "required": [
        "domain",
        "group"
    ],
    "properties": {
        "domain": {
            "type": "string",
            "title": "Domain name",
            "minLength": 1
        },
        "group": {
            "type": "string",
            "title": "Group name",
            "minLength": 1
        }
    }
}
