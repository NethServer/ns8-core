import sys
import json
import agent

request = json.load(sys.stdin)
rdb = agent.redis_connect(privileged=False)

ret = []
for f in rdb.smembers('cluster/favorites'):
    # skip non-existing instances
    image_name = rdb.get(f'module/{f}/image_name')
    if image_name:
        ret.append({'id': f, 'module': image_name})

json.dump(ret, fp=sys.stdout)
