{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "set-name input",
    "$id": "http://schema.nethserver.org/cluster/set-name-input.json",
    "description": "Assign a user-defined name to the cluster. The name is shown in the UI.",
    "examples": [
        {
            "name": "Adam"
        }
    ],
    "type": "object",
    "required": [
        "name"
    ],
    "properties": {
        "name": {
            "type": "string",
            "maxLength": 24
        }
    }
}
