import os
import sys
import json
import agent
import uuid

errors = []

request = json.load(sys.stdin)
rdb = agent.redis_connect(privileged=False)

agent.set_weight(os.path.basename(__file__), 0) # Validation step, no task progress at all

name = request['name']
url = request['url']
id = str(uuid.uuid5(uuid.NAMESPACE_DNS, url))

# check for duplicate names
if rdb.exists(f'cluster/backup_repository/{id}'):
    errors.append({'field':'id','parameter':'id','value': id,'error':'backup_repository_exists'})

if errors:
    agent.set_status('validation-failed')
    json.dump(errors, fp=sys.stdout)
    sys.exit(2)
