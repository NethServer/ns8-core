{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "upload-password-warning-template",
  "$id": "http://schema.nethserver.org/cluster/upload-password-warning-template-input.json",
  "description": "upload-password-warning-template",
  "examples": [
    {
      "name": "custom_en",
      "content": "RGVhciAkbmFtZSAoJH...",
      "mail_subject": "Password expiration warning"
    }
  ],
  "type": "object",
  "required": [
    "name",
    "content",
    "mail_subject"
  ],
  "properties": {
    "name": {
      "description": "A template name",
      "type": "string",
      "minLength": 1
    },
    "content": {
      "description": "The template content in base64 format, it can be a text file or an HTML file. It must respect python string.Template syntax",
      "type": "string",
      "minLength": 1
    },
    "mail_subject": {
      "description": "The email subject. It must respect python string.Template syntax",
      "type": "string",
      "minLength": 1
    }
  }
}
