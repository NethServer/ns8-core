{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "list-mountpoints output",
    "$id": "http://schema.nethserver.org/node/list-mountpoints.json",
    "description": "Output schema of the list-mountpoints action",
    "examples": [
        {
            "rootfs": {
                "path": "/",
                "size": 63254278144,
                "used": 11392909312,
                "label": "rl1_root",
                "available": 51861368832
            },
            "mountpoints": [
                {
                    "ui_name": "disk00",
                    "path": "/mnt/disk00",
                    "label": "",
                    "size": 2136997888,
                    "used": 49049600
                },
                {
                    "ui_name": "VOL01",
                    "path": "/mnt/xvolume_davidep_cluster0_rl1",
                    "label": "VOL01",
                    "size": 2136997888,
                    "used": 49049600
                }
            ]
        }
    ],
    "type": "object",
    "properties": {
        "rootfs": {
            "$ref": "#/$defs/fsinfo"
        },
        "mountpoints": {
            "type": "array",
            "items": {
                "$ref": "#/$defs/fsinfo"
            }
        }
    },
    "$defs": {
        "fsinfo": {
            "type": "object",
            "properties": {
                "ui_name": {
                    "type": "string"
                },
                "path": {
                    "type": "string"
                },
                "label": {
                    "type": "string"
                },
                "size": {
                    "type": "number",
                    "description": "bytes"
                },
                "available": {
                    "type": "number",
                    "description": "bytes"
                },
                "used": {
                    "type": "number",
                    "description": "bytes"
                }
            }
        }
    }
}
