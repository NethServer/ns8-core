#
# Copy ACLs to cluster/acls key
# This script must be executed on the leader server
#

import os
import sys
import agent

with open('/var/lib/nethserver/cluster/state/agent.env') as fp:
    for l in fp.readlines():
        (key,value) = l.strip().split("=")
        os.environ[key] = value

rdb = agent.redis_connect(privileged=True)

role = rdb.execute_command('ROLE')[0];

# copy ACLs to cluster/acl key
if role == 'master':
    print("Saving ACLs")
    for acl in rdb.acl_list():
        # skip 'cluster' because password should
        # be different for every node
        if acl.startswith('user cluster on '):
            continue
        rdb.sadd("cluster/acls", acl)
    rdb.publish('cluster/event/acl-load', 'sync')
    print("Signaling event: cluster/event/acl-load")
else:
    print("This command should run only on leader node", file=sys.stderr)
    sys.exit(1)
