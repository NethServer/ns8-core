#
# Load ACLs from cluster/acls key
# This script must be executed on the worker server
#

import os
import sys
import agent

with open('/var/lib/nethserver/cluster/state/agent.env') as fp:
    for l in fp.readlines():
        (key,value) = l.strip().split("=")
        os.environ[key] = value

rdb = agent.redis_connect(privileged=True)

role = rdb.execute_command('ROLE')[0];

# copy ACLs to cluster/acl key
if role == 'slave':
    for user in rdb.acl_users():
        if user != "cluster" and user != "default":
            rdb.acl_deluser(user)

    # save acls
    for acl in rdb.smembers('cluster/acls'):
        rdb.execute_command(f'ACL set{acl}')

    rdb.acl_save()
    print("ACLs loaded")
else:
    print("This command should run only on worker node", file=sys.stderr)
    sys.exit(1)
