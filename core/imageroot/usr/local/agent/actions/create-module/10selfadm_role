exec 1>&2
set -e

# If action "configure-module" exists, grant it to selfadm role:
if [[ -d "${AGENT_INSTALL_DIR}"/actions/configure-module ]]; then
    redis-exec SADD "${AGENT_ID}/roles/selfadm" "configure-module"
fi
