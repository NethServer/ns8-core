import sys
import json
import agent

outdata = []

request = json.load(sys.stdin)

rdb = agent.redis_connect()

json.dump(agent.list_service_providers(rdb,
    request['service'],
    transport=request.get('transport', '*'), 
    filters=request.get('filter', {}),
), fp=sys.stdout)
