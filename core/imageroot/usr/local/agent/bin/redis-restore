import sys
import agent

rdb = agent.redis_connect(privileged=True, decode_responses=False)

key = sys.argv[1]
try:
    ttl = sys.argv[2]
except IndexError:
    ttl = "0"

# Read raw binary data from stdin
data = sys.stdin.buffer.raw.read()
if data: # zero length file is ignored
    rdb.restore(key, ttl, data)
