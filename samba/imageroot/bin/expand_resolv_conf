import os
import sys
import json
import agent

realm = os.getenv('REALM')
rdb = agent.redis_connect()

# Send any output to the hosts file
sys.stdout = open('resolv.conf.expand','w')

print("# generated by " + sys.argv[0])
print("nameserver", os.getenv('IPADDRESS'))

# Print the nameserver list, with one entry for DC
for key in rdb.scan_iter(match='module/samba*/environment'):
    env = rdb.hgetall(key)
    if env.get('REALM') != os.environ['REALM']:
        continue # skip DCs of other realms
    if key == f"module/samba{os.getenv('NODE_ID')}/environment":
        continue # skip the local DC IP address: it was already added.
    if env.get('IPADDRESS'):
        print("nameserver", env['IPADDRESS'])

print("\n")

os.rename('resolv.conf.expand', 'resolv.conf')
