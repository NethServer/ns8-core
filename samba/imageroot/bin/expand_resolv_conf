import os
import sys
import json
import agent
import cluster.userdomains

realm = os.getenv('REALM')
kdomain = realm.lower()
rdb = agent.redis_connect()

# Send any output to the hosts file
sys.stdout = open('resolv.conf.expand','w')

print("# generated by " + sys.argv[0])
print("nameserver", os.getenv('IPADDRESS'))

# Print the nameserver list, with one entry for DC
with agent.redis_connect() as rdb:
    domains = cluster.userdomains.get_internal_domains(rdb)
    if kdomain in domains:
        for provider in domains[kdomain]['providers']:
            if provider['id'] == os.getenv("MODULE_ID"):
                continue
            print("nameserver", provider['host'])

print("\n")

os.rename('resolv.conf.expand', 'resolv.conf')
