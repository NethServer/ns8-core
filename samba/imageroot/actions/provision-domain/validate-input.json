{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "provision-domain input",
    "$id": "http://schema.nethserver.org/samba/provision-domain-input.json",
    "description": "Provision a new Active Directory domain controller",
    "examples": [
        {
            "adminuser": "administrator",
            "adminpass": "Nethesis,1234",
            "realm": "AD.EXAMPLE.COM",
            "ipaddress": "10.15.21.100",
            "hostname": "dc1",
            "nbdomain": "AD"
        }
    ],
    "type": "object",
    "required": [
        "realm",
        "adminuser",
        "adminpass",
        "ipaddress"
    ],
    "properties": {
        "adminuser": {
            "type": "string",
            "minLength": 1
        },
        "adminpass": {
            "type": "string",
            "minLength": 1
        },
        "ipaddress": {
            "type": "string",
            "format": "ipv4"
        },
        "hostname": {
            "type": "string",
            "pattern": "^[a-zA-Z][-a-zA-Z0-9]*$",
            "maxLength": 15
        },
        "realm": {
            "type": "string",
            "title": "Domain name",
            "pattern": "^[a-zA-Z][-a-zA-Z0-9]{0,62}(\\.[a-zA-Z][-a-zA-Z0-9]{0,62})+$",
            "maxLength": 140,
            "minLength": 1
        },
        "nbdomain": {
            "type": "string",
            "title": "NetBIOS domain name",
            "description": "This field is ignored if a DC for the domain is already provisioned",
            "pattern": "^[a-zA-Z][-a-zA-Z0-9]*$",
            "maxLength": 15,
            "minLength": 1
        }
    }
}
