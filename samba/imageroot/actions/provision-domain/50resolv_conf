import os
import sys
import json
import agent

realm = os.getenv('REALM')
rdb = agent.redis_connect()

# Send any output to the hosts file
sys.stdout = open('resolv.conf','w')

print("# generated by 15resolvconf\n")
print(f"search {realm}\n\n")
print(f"nameserver {os.getenv('IPADDRESS')}\n")

# Print the nameserver list, with one entry for DC
for key in rdb.scan_iter(match='module/samba*/environment'):
    if key == f"{os.getenv('AGENT_ID')}/environment":
        continue
    env = rdb.hgetall(key)
    if env['IPADDRESS']:
        print(f"nameserver {env['IPADDRESS']}\n")

print("\n")
