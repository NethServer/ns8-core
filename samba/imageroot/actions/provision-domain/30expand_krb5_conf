exec 1>&2
set -e

cat >krb5.conf.expand <<EOF
# generated by $0
[libdefaults]
	default_realm = ${REALM^^}
	dns_lookup_realm = false
	dns_lookup_kdc = true

[realms]
${REALM^^} = {
	default_domain = ${REALM,,}
}

[domain_realm]
	${REALM,,} = ${REALM^^}
EOF

mv krb5.conf.expand krb5.conf
