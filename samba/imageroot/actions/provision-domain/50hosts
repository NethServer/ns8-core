import os
import sys
import json
import agent

rdb = agent.redis_connect()

# Send any output to the hosts file (/etc/hosts for the container)
sys.stdout = open('hosts','w')

print("# generated by 15hosts\n")
print("127.0.0.1 localhost.localdomain localhost\n\n")
print(f"{os.getenv('IPADDRESS')} {os.getenv('HOSTNAME')}\n")

for key in rdb.scan_iter(match='module/samba*/environment'):
    if key == f"{os.getenv('AGENT_ID')}/environment":
        continue
    env = rdb.hgetall(key)
    if env['IPADDRESS'] and env['HOSTNAME']:
        print(f"{env['IPADDRESS']} {env['HOSTNAME']}\n")

print("\n")
