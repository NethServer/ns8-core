import os
import sys
import json
import agent

rdb = agent.redis_connect()

# Send any output to the hosts file (/etc/hosts for the container)
sys.stdout = open('hosts.expand','w')

print("# generated by " + sys.argv[0])
print("127.0.0.1 localhost.localdomain localhost")
print(f"{os.environ['IPADDRESS']} {os.environ['HOSTNAME']}")

os.rename('hosts.expand', 'hosts')
